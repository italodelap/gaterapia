---
import { Avatar } from "@nextui-org/react";

import HeroBentoItem from "./HeroBentoItem.astro";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<HeroBentoItem class=`relative ${className}`>
  <div
    class="absolute inset-0 opacity-20 bg-gradient-to-r from-gray-200 via-gray-400 to-gray-600"
  >
  </div>
  <div class="absolute inset-0 p-4 flex flex-col gap-4 text-white">
    <h1 class="hidden md:block font-['Caveat_Brush'] text-7xl text-white">
      Gaterapia
    </h1>
    <div class="flex gap-4 items-center">
      <Avatar showFallback />
      <h2 class="text-xl font-semibold flex items-center gap-2">
        Hola! Soy Juli
        <img
          class="size-8"
          src="/woman_raising_hand-emoji.webp"
          alt="Emoji de una mujer levantando la mano"
        />
      </h2>
    </div>
    <div class="flex flex-col gap-4 text-base font-medium text-pretty">
      <p>
        Nos especializamos en comportamiento felino, catsitting, terapia floral,
        reiki, registros akáshicos y comunicación telepática con animales.
      </p>
      <p class="flex items-center gap-1">
        Espero que te podamos ayudar
        <img
          class="size-6"
          src="/hugging_face-emoji.webp"
          alt="Emoji de una mujer levantando la mano"
        />
      </p>
    </div>
  </div>
</HeroBentoItem>
