---
interface Props {
  href: string;
  label: string;
}

const { href, label } = Astro.props;
---

<a
  href={href}
  aria-labelledby={label}
  class={`
    group grid place-items-center rounded-xl
    transition-all hover:scale-125 focus:scale-125
  `}
>
  <span id={label} class="hidden">{label}</span>
  <slot />
</a>
