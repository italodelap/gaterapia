---
interface Props {
  href: string;
  label: string;
}

const { href, label } = Astro.props;
---

<a
  href={href}
  aria-labelledby={label}
  class={`
    group grid place-items-center p-2 rounded-xl
    transition-all hover:scale-105 hover:bg-black/10 focus:bg-black/10
  `}
>
  <span id={label} class="hidden">{label}</span>
  <slot />
</a>
