---
interface Props {
  href: string;
  label: string;
}

const { href, label } = Astro.props;
---

<li>
  <a
    href={href}
    aria-labelledby={label}
    class="transition-colors duration-500 inline-block px-2 py-2 align-middle"
  >
    <span id={label} class="hidden">{label}</span>
    <slot />
  </a>
</li>
