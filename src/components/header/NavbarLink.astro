---
interface Props {
  href: string;
  label: string;
}

const { href, label } = Astro.props;
---

<a
  href={href}
  title={label}
  aria-labelledby={label}
  class="group sm:px-4 sm:py-3 flex items-center justify-center gap-2 font-medium transition-all duration-500"
>
  <span id={label} class="hidden">{label}</span>
  <slot />
</a>
