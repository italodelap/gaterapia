---
import Hello from "./hello/Hello.astro";
import HeroBento from "./HeroBento.astro";
import HeroBentoItem from "./HeroBentoItem.astro";
---

<img
  src="/gaterapia-logo.png"
  alt="Logotipo de Gaterapia"
  class="block md:hidden w-60 mx-auto mt-4 pb-6 pointer-events-none select-none"
/>
<HeroBento>
  <Hello class="hidden sm:flex" />
  <HeroBentoItem class="grid place-items-center">
    <img
      class="h-full"
      src="/hero/hero-photo.webp"
      alt="Foto de Juli, Smoking y Brisa"
    />
  </HeroBentoItem>
  <Hello class="flex sm:hidden" />
</HeroBento>
