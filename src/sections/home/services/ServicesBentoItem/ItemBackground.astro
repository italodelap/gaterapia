---
import { Image } from "astro:assets";

interface Props {
  slug: string;
  altText: string;
}

const { slug, altText } = Astro.props;
---

<Image
  width="160"
  height="220"
  alt={altText}
  loading="eager"
  decoding="async"
  src={`/services/${slug}.webp`}
  transition:name={`${slug}_image`}
  class={`
    aspect-[4/5]
    w-full h-full object-cover
    absolute inset-0 opacity-60
    pointer-events-none select-none
    transition-all group-hover:scale-110
  `}
/>
