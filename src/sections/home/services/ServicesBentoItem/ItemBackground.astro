---
import { Image } from "astro:assets";

interface Props {
  source: string;
  altText: string;
}

const { source, altText } = Astro.props;
---

<Image
  width="160"
  height="220"
  src={source}
  alt={altText}
  loading="eager"
  decoding="async"
  class={`
    aspect-[4/5]
    w-full h-full object-cover
    absolute inset-0 opacity-60
    pointer-events-none select-none
    transition-all group-hover:scale-110
  `}
/>
