---
import ItemBackground from "./ItemBackground.astro";
import ItemButton from "./ItemButton.astro";
import ItemButtonContainer from "./ItemButtonContainer.astro";
import ItemTitle from "./ItemTitle.astro";
import ItemTitleContainer from "./ItemTitleContainer.astro";

interface Props {
  class?: string;
  lazy: boolean;
  slug: string;
  title: string;
}

const { class: className, lazy, slug, title } = Astro.props;
---

<article
  class={`
    rounded-3xl border border-black/10
    group relative text-white overflow-hidden
    flex flex-col items-center gap-2 justify-between
    col-span-12 min-[375px]:col-span-6 sm:col-span-4
    ${className ?? ""}
  `}
>
  <ItemBackground
    lazy={lazy}
    slug={slug}
    altText={`Foto ilustrativa del servicio de '${title}'`}
  />
  <ItemTitleContainer>
    <ItemTitle title={title} />
  </ItemTitleContainer>
  <ItemButtonContainer>
    <ItemButton href={`/servicios/${slug}`} />
  </ItemButtonContainer>
</article>
