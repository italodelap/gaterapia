---
import { getFormattedServices } from "@/lib/data";

import ServicesBento from "./ServicesBento.astro";
import BentoItem from "./ServicesBentoItem/Item.astro";

const services = await getFormattedServices();
---

<ServicesBento>
  {
    services.map((service, index) => (
      <BentoItem {...service} lazy={index > 2} />
    ))
  }
</ServicesBento>
