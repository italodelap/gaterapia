---
import "@fontsource/caveat-brush";
import "@fontsource-variable/montserrat";

import { ViewTransitions } from "astro:transitions";

import "@/assets/styles/global.css";

import Background from "@/components/Background.astro";
import BackToGaterapiaButton from "@/components/back-to-gaterapia-button/BackToGaterapiaButton.astro";
import Footer from "@/components/footer/Footer.astro";

import { getServicesDescriptionForSeo } from "@/lib/data";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="theme-color" content="#E1306C" />
		<meta name="generator" content={Astro.generator} />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={getServicesDescriptionForSeo()} />
		<link rel="icon" type="image/webp" href="/gaterapia-isotype.webp" />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Background />
		<header class="w-full">
			<div class="mx-auto mt-4 w-full max-w-6xl p-8 flex items-center">
				<BackToGaterapiaButton />
			</div>
		</header>
		<slot />
		<Footer class="px-8 pb-8" />
	</body>
</html>
