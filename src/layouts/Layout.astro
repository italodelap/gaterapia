---
import "@fontsource/caveat-brush";
import "@fontsource-variable/montserrat";

import Header from "@/components/header/Header.astro";
import Footer from "@/components/footer/Footer.astro";

import { getServicesDescriptionForSeo } from "@/lib/data";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="theme-color" content="#E1306C" />
		<meta name="generator" content={Astro.generator} />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={getServicesDescriptionForSeo()} />
		<link rel="icon" type="image/webp" href="/gaterapia-isotype.webp" />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer class="pt-24" />
	</body>
</html>

<style is:global>
	html, body { min-height: theme(minHeight.screen); }
	html { font-family: "Montserrat Variable", system-ui, sans-serif; }
	body { background: linear-gradient(to top left, theme(colors.neutral.800), theme(colors.cerise-red.600)); }
</style>
